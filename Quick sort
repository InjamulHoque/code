#include<stdio.h>
void main()
{
    int n;
    printf("Enter the number of element for an array:");
    scanf("%d",&n);
    int i,A[n];
    printf("Taking the value for each element in this array:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&A[i]);
    }
    int start=0,end=n-1;
    quicksort(A,start,end);
    printf("The sorted elements are:\t");
    for(i=0;i<n;i++)
    {
        printf("%d\t",A[i]);
    }
}
void quicksort(int A[],int start,int end)
{
    if(start<=end)
    {
       int mid=partition(A,start,end);
        quicksort(A,start,mid-1);
        quicksort(A,mid+1,end);
    }
}
int partition(int A[],int start,int end)
{
    int j,pivot=end;
    int mid=start;
    for(j=start;j<=end;j++)
    {
        if(A[j]<pivot)
        {
            int item;
            item=A[mid];
            A[mid]=A[j];
            A[j]=item;
            mid=mid+1;
        }
    }
    int item1;
    item1=A[end];
    A[end]=A[mid];
    A[mid]=item1;
    return mid;
}
